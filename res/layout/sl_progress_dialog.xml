<?xml version="1.0" encoding="utf-8"?><!--自定义等等对话框布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ProgressBar
            android:layout_marginTop="0dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/sl_progress_dialog"
            android:layout_width="@dimen/sl_progress_dialog_width"
            android:layout_height="@dimen/sl_progress_dialog_height"/>
    <TextView
            android:id="@+id/txt_progress_title"
            android:textColor="#252729"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

</LinearLayout>