<?xml version="1.0" encoding="utf-8"?><!-- 无数据内容 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_error_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nodata_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/c_ic_nodata_cry" />

        <TextView
            android:id="@+id/nodata_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="14dp"
            android:gravity="center_horizontal"
            android:text="获取网络数据失败，点击重试~"
            android:textColor="@color/sl_high_gray" />

    </LinearLayout>

</RelativeLayout>