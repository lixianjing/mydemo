<?xml version="1.0" encoding="utf-8"?><!-- 正在加载的布局,只有在空数据时用 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/com_loading_layout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:visibility="gone"
              android:orientation="vertical"
              android:background="#ffffff"
              android:clickable="true">

    <FrameLayout android:layout_width="90dp" android:layout_height="80dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/progress_bar_back"
                />
        <ProgressBar
                android:id="@+id/progressbar"
                android:layout_gravity="center_horizontal|center_vertical"
                android:indeterminateDrawable="@drawable/sl_progress_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>

    <TextView
            android:id="@+id/txt_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dip"
            />
</LinearLayout>